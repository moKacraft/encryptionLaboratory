<?xml version="1.0" encoding="UTF-8"?>
<project name="pgp" default="all">
  
  
  <property file="pgp.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/bcpg-jdk15on-155.jar"/>
      <include name="jre/lib/ext/bcprov-ext-jdk15on-155.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.bcpg-jdk15on-155.classpath">
    <pathelement location="${basedir}/lib/bcpg-jdk15on-155.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <path id="library.bcpg-jdk15on-155.classpath">
    <pathelement location="C:/Users/Madeline/Desktop/bcpg-jdk15on-155.jar"/>
  </path>
  
  <path id="library.bcprov-ext-jdk15on-155.classpath">
    <pathelement location="C:/Users/Madeline/Desktop/bcprov-ext-jdk15on-155.jar"/>
  </path>
  
  <path id="library.commons-codec-1.10.classpath">
    <pathelement location="C:/Users/Madeline/IdeaProjects/pgp/lib/commons-codec-1.10.jar"/>
  </path>
  
  <path id="library.commons-net-3.6.classpath">
    <pathelement location="C:/Users/Madeline/IdeaProjects/pgp/lib/commons-net-3.6.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Encryption -->
  
  <dirname property="module.encryption.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.encryption" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.encryption" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.encryption" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.encryption" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="encryption.output.dir" value="${module.encryption.basedir}/out/production/Encryption"/>
  <property name="encryption.testoutput.dir" value="${module.encryption.basedir}/out/test/Encryption"/>
  
  <path id="encryption.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="encryption.module.production.classpath">
    <path refid="${module.jdk.classpath.encryption}"/>
    <path refid="library.bcprov-ext-jdk15on-155.classpath"/>
    <path refid="library.bcpg-jdk15on-155.classpath"/>
    <path refid="library.commons-net-3.6.classpath"/>
    <path refid="library.commons-codec-1.10.classpath"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  <path id="encryption.runtime.production.module.classpath">
    <pathelement location="${encryption.output.dir}"/>
    <path refid="library.bcprov-ext-jdk15on-155.classpath"/>
    <path refid="library.bcpg-jdk15on-155.classpath"/>
    <path refid="library.commons-net-3.6.classpath"/>
    <path refid="library.commons-codec-1.10.classpath"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  <path id="encryption.module.classpath">
    <path refid="${module.jdk.classpath.encryption}"/>
    <pathelement location="${encryption.output.dir}"/>
    <path refid="library.bcprov-ext-jdk15on-155.classpath"/>
    <path refid="library.bcpg-jdk15on-155.classpath"/>
    <path refid="library.commons-net-3.6.classpath"/>
    <path refid="library.commons-codec-1.10.classpath"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  <path id="encryption.runtime.module.classpath">
    <pathelement location="${encryption.testoutput.dir}"/>
    <pathelement location="${encryption.output.dir}"/>
    <path refid="library.bcprov-ext-jdk15on-155.classpath"/>
    <path refid="library.bcpg-jdk15on-155.classpath"/>
    <path refid="library.commons-net-3.6.classpath"/>
    <path refid="library.commons-codec-1.10.classpath"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.encryption">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.encryption">
    <patternset refid="excluded.from.module.encryption"/>
  </patternset>
  
  <path id="encryption.module.sourcepath">
    <dirset dir="${module.encryption.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.encryption" depends="compile.module.encryption.production,compile.module.encryption.tests" description="Compile module Encryption"/>
  
  <target name="compile.module.encryption.production" depends="register.custom.compilers" description="Compile module Encryption; production classes">
    <mkdir dir="${encryption.output.dir}"/>
    <javac2 destdir="${encryption.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.encryption}/javac">
      <compilerarg line="${compiler.args.encryption}"/>
      <bootclasspath refid="encryption.module.bootclasspath"/>
      <classpath refid="encryption.module.production.classpath"/>
      <src refid="encryption.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.encryption"/>
    </javac2>
    
    <copy todir="${encryption.output.dir}">
      <fileset dir="${module.encryption.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.encryption.tests" depends="register.custom.compilers,compile.module.encryption.production" description="compile module Encryption; test classes" unless="skip.tests"/>
  
  <target name="clean.module.encryption" description="cleanup module">
    <delete dir="${encryption.output.dir}"/>
    <delete dir="${encryption.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.encryption" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.encryption" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>